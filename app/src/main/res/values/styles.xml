<resources>

    <style name="LaunchTheme" parent="AppTheme">
        <!--        <item name="android:windowBackground"></item>-->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <item name="fontFamily">@font/manrope_medium</item>
    </style>

    <style name="RoundedAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="cornerRadius">12dp</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="RoundedColorDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">12dp</item>
        <item name="fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/ripple_foreground_toolbar</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">6dp</item>
        <!--app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"-->
    </style>

</resources>
